{% extends 'base.html.twig' %}

{% block title %}Nouveau Film{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

        <div class="example-wrapper">
            <h1>Ajouter ici un nouveau film !</h1>
            {{ form_start(formulaire) }}

            {{form_row(formulaire.nom, {'attr':{
                'placeholder':'Ex: Votre film...',
                'max-lengh':'40',
                'pattern':'.{1,}'
            }})}}
            <br>
            {{form_row(formulaire.realisateur, {'attr':{'placeholder':'Ex: Michael BAY'}} )}}
            <br>
            {{form_row(formulaire.resume, {'attr':{'placeholder':'Ex: Film d\'action captivant'}})}}

            <button type="submit" class="btn btn-success">Ajouter</button>

            {{ form_end(formulaire) }}
        </div>
            <a href="{{ path('film') }}">Retour à l'accueil de la bibliothèque</a>
{% endblock %}
