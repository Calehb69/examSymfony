{% extends 'base.html.twig' %}

{% block title %}Accueil La BiblioFilm{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <h1><strong>Bienvenue sur la BiblioFilm !</strong></h1>
    <a href="{{ path('film_new') }}"><strong>Créer un nouveau film</strong></a>
    <br>
    <hr>
    {% for film in films %}
        <div class="example-wrapper">
            <h2><strong>Titre : {{ film.nom }}</strong></h2>
            <h3>Réalisateur: <br>{{ film.realisateur }}</h3>
            <hr>
            <h3>Résumé : <br>{{ film.resume }}</h3>
            <hr>
            <h3>Date de sortie : <br>{{ film.createdAt|date('Y') }}</h3>
            <br>
            <a href="{{ path('unfilm',{id:film.id})}}">Voir + de détail sur ce film</a>
            <br>
            <a href="{{ path('changefilm',{id:film.id})}}">Modifier ce film</a>
            <br>
            <a href="{{ path('filmsupprimer', {id:film.id})}}">Supprimer</a>
            <hr>
            <br>
        </div>
    {% endfor %}
{% endblock %}
